{
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext"
        ],
        "strict": true,
        "sourceMap": true,
        "target": "esnext",
        "types": [
            "cypress",
            "node"
        ],
        "baseUrl": "src"
    },
    "include": [
        "src",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}